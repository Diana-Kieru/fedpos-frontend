<resources>
    <style name="custom_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">30dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="cardForegroundColor">@color/gray_d2</item>
    </style>

